{
  "name": "@neondatabase/auth",
  "version": "0.1.0-beta.21",
  "description": "TypeScript SDK for Neon Auth - authentication for PostgreSQL with multiple adapter support",
  "type": "module",
  "license": "Apache-2.0",
  "keywords": [
    "neon",
    "neondb",
    "postgresql",
    "postgres",
    "authentication",
    "auth",
    "typescript",
    "sdk",
    "better-auth",
    "supabase",
    "react",
    "nextjs"
  ],
  "homepage": "https://github.com/neondatabase/neon-js/tree/main/packages/auth#readme",
  "bugs": {
    "url": "https://github.com/neondatabase/neon-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neondatabase/neon-js.git",
    "directory": "packages/auth"
  },
  "funding": {
    "url": "https://neon.tech"
  },
  "author": "Pedro Figueiredo <pedro.figueiredo@databricks.com>",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./types": {
      "types": "./dist/types/index.d.mts",
      "default": "./dist/types/index.mjs"
    },
    "./react": {
      "types": "./dist/react/index.d.mts",
      "default": "./dist/react/index.mjs"
    },
    "./react/ui": {
      "types": "./dist/react/ui/index.d.mts",
      "default": "./dist/react/ui/index.mjs"
    },
    "./react/ui/server": {
      "types": "./dist/react/ui/server.d.mts",
      "default": "./dist/react/ui/server.mjs"
    },
    "./react/adapters": {
      "types": "./dist/react/adapters/index.d.mts",
      "default": "./dist/react/adapters/index.mjs"
    },
    "./vanilla": {
      "types": "./dist/vanilla/index.d.mts",
      "default": "./dist/vanilla/index.mjs"
    },
    "./vanilla/adapters": {
      "types": "./dist/vanilla/adapters/index.d.mts",
      "default": "./dist/vanilla/adapters/index.mjs"
    },
    "./next": {
      "types": "./dist/next/index.d.mts",
      "default": "./dist/next/index.mjs"
    },
    "./next/server": {
      "types": "./dist/next/server/index.d.mts",
      "default": "./dist/next/server/index.mjs"
    },
    "./ui/css": {
      "types": "./dist/ui/css.d.ts",
      "default": "./dist/ui/css.css"
    },
    "./ui/tailwind": {
      "default": "./dist/ui/tailwind.css"
    }
  },
  "files": [
    "dist",
    "llms.txt"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "test:node": "node --run test",
    "test:ci": "vitest run --passWithNoTests",
    "typecheck": "tsc --noEmit",
    "test:types": "tsc --noEmit",
    "lint": "eslint .",
    "clean": "rm -rf node_modules dist",
    "release": "bun run build && bumpp --tag 'auth-v%s' && bun publish --tag latest"
  },
  "devDependencies": {
    "@neondatabase/internal": "0.0.1",
    "msw": "2.6.8",
    "next": "16.0.6"
  },
  "dependencies": {
    "@neondatabase/auth-ui": "0.1.0-alpha.11",
    "@supabase/auth-js": "2.79.0",
    "better-auth": "1.4.6",
    "jose": "6.1.2",
    "zod": "4.1.12"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "next": ">=16.0.6"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  }
}
